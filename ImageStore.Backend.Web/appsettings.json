{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "JwtOptions": {
    "Issuer": "ImageStore",
    "ValidMinutes": 1440
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ImageStore;Trusted_Connection=True"
  },
  "ImageOptions": {
    "FilesPath": "Files\\Images",
    "ThumbnailsPath": "Files\\Thumbnails",
    "AllowedFileExtensions": [
      ".jpg",
      ".png"
    ]
  }
}
